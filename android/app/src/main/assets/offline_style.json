{
  "version": 8,
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "sources": {
    "vector-tiles": {
      "type": "vector",
      "tiles": [
        "asset://assets/tiles/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 13
    }
  },
  "layers": [
    {
      "id": "water",
      "type": "fill",
      "source": "vector-tiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "vector-tiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "transportation",
      "type": "line",
      "source": "vector-tiles",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#000000",
        "line-width": 1
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "vector-tiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#aaaaaa",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "vector-tiles",
      "source-layer": "place",
      "layout": {
        "text-field": ["get", "name:en"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#333333"
      }
    }
  ]
}